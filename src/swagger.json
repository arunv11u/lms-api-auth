{
	"openapi": "3.0.0",
	"info": {
		"title": "Learning Management System APIs",
		"description": "This is a Learning Management System API documentation which is only exposed on development environment.",
		"version": "1.0.0"
	},
	"servers": [
		{
			"url": "http://localhost:3000",
			"description": "Local host server, exclusively for back-end developers."
		},
		{
			"url": "https://smooth-raptor-explicitly.ngrok-free.app/api/auth",
			"description": "LMS API's related to user authentications"
		}
	],
	"paths": {
		"/student": {
			"post": {
				"summary": "Register a student",
				"tags": [
					"Student"
				],
				"requestBody": {
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"properties": {
									"firstName": {
										"type": "string"
									},
									"lastName": {
										"type": "string"
									},
									"email": {
										"type": "string"
									},
									"password": {
										"type": "string"
									}
								},
								"example": {
									"firstName": "John",
									"lastName": "Doe",
									"email": "johndoe@gmail.com",
									"password": "john@123"
								},
								"required": [
									"firstName",
									"lastName",
									"email",
									"password"
								]
							}
						}
					}
				},
				"responses": {
					"200": {
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"data": {
											"$ref": "#/components/schemas/User"
										}
									},
									"required": [
										"data"
									]
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"securitySchemes": {
			"bearerAuth": {
				"type": "http",
				"scheme": "bearer"
			}
		},
		"requestBodies": {},
		"schemas": {
			"Error": {
				"type": "object",
				"properties": {
					"errors": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"code": {
									"type": "string"
								},
								"message": {
									"type": "string"
								},
								"field": {
									"type": "string"
								}
							},
							"required": [
								"code",
								"message"
							]
						}
					}
				},
				"required": [
					"errors"
				],
				"example": {
					"errors": [
						{
							"code": "INV_INP",
							"message": "Name is required"
						}
					]
				}
			},
			"User": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string",
						"example": "3a8a46f8-b4c3-4ff7-b900-99b9ee07efe8"
					},
					"firstName": {
						"type": "string",
						"example": "John"
					},
					"lastName": {
						"type": "string",
						"example": "Doe"
					},
					"email": {
						"type": "string",
						"example": "johndoe@gmail.com"
					},
					"password": {
						"type": "string",
						"example": "john@123"
					}
				},
				"required": [
					"id",
					"firstName",
					"lastName",
					"email",
					"password"
				]
			}
		}
	}
}